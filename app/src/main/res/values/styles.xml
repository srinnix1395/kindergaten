<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="StyleEditText">
        <item name="android:textSize">16sp</item>
    </style>

    <!--chat -->
    <style name="TextViewItemChat">
        <item name="android:textSize">14sp</item>
        <item name="android:maxWidth">280dp</item>
    </style>

    <style name="TextViewItemChatLeft" parent="TextViewItemChat">
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="TextViewItemChatRight" parent="TextViewItemChat">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="StyleEditTextFragmentLogin">
        <item name="android:textColorHint">@color/colorWhiteFadeFade</item>
        <item name="android:layout_marginLeft">@dimen/marginHorizontalFragmentLogin</item>
        <item name="android:layout_marginRight">@dimen/marginHorizontalFragmentLogin</item>
        <item name="android:background">@drawable/background_edit_text_fragment_login</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorWhiteFade</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!--chat-->


</resources>
