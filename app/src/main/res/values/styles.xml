<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButton</item>
    </style>

    <style name="MyOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="StyleEditTextChat" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_activity</item>
    </style>

    <style name="StyleEditTextFrmAccount" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_low</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeEdittextFrmAccount" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--chat -->
    <style name="TextViewItemChat">
        <item name="android:textSize">14sp</item>
        <item name="android:maxWidth">250dp</item>
    </style>

    <style name="TextViewItemChatLeft" parent="TextViewItemChat">
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="TextViewItemChatRight" parent="TextViewItemChat">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="StyleEditTextFragmentLogin">
        <item name="android:textColorHint">@color/colorWhiteFadeFade</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_fragment_login</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal_fragment_login</item>
        <item name="android:background">@drawable/background_edit_text_fragment_login</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorWhiteFade</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CancelPostDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorSecondaryText</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TimeTableStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleStyleFrmAccount" parent="AppTheme">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContentStyleFrmAccount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_low</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StyleSettingFragment" parent="AppTheme">
        <item name="android:paddingStart">@dimen/margin_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <!--chat-->


</resources>
