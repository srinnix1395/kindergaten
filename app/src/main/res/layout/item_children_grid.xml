<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="72dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:paddingBottom="@dimen/margin_vertical_item_children"
    android:paddingTop="@dimen/margin_vertical_item_children">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_icon"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_vertical_item_children"
        app:cardCornerRadius="@dimen/radius_card_view"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_icon"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textSize="12sp"
        tools:text="Anh TÃº"/>

</RelativeLayout>