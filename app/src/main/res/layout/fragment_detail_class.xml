<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_detail_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_class_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_high"
            android:layout_marginBottom="@dimen/margin_vertical_post"
            app:cardCornerRadius="@dimen/radius_card_view_fragment_class"
            app:cardElevation="@dimen/elevation_card_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_post"
                android:paddingLeft="@dimen/margin_horizontal"
                android:paddingRight="@dimen/margin_horizontal"
                android:paddingTop="@dimen/padding_post">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imageview_icon"
                        android:layout_width="@dimen/item_size"
                        android:layout_height="@dimen/item_size"/>
                </android.support.v7.widget.CardView>


                <TextView
                    android:id="@+id/textview_class_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_icon_fragment_class"
                    android:layout_marginRight="@dimen/margin_icon_fragment_class"
                    android:layout_toRightOf="@id/cardview_icon"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="16sp"
                    tools:text="Lớp chồi 4"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_teachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_class_name"
            android:layout_marginBottom="@dimen/margin_vertical_post"
            android:layout_marginTop="@dimen/margin_vertical_post"
            app:cardCornerRadius="@dimen/radius_card_view_fragment_class"
            app:cardElevation="@dimen/elevation_card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vertical_post"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_horizontal"
                    android:text="@string/teacher"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <include
                    android:id="@+id/rel_teacher_1"
                    layout="@layout/item_teacher"/>

                <include
                    android:id="@+id/rel_teacher_2"
                    layout="@layout/item_teacher"/>

                <include
                    android:id="@+id/rel_teacher_3"
                    layout="@layout/item_teacher"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_member_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_teachers"
            android:layout_marginBottom="@dimen/margin_vertical_post"
            android:layout_marginTop="@dimen/margin_vertical_post"
            app:cardCornerRadius="@dimen/radius_card_view_fragment_class"
            app:cardElevation="@dimen/elevation_card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_horizontal"
                    android:text="@string/class_member"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_member_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textview_see_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_next"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_horizontal"
                    android:textAllCaps="true"
                    tools:text="@string/see_all"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_member_class"
            android:layout_marginBottom="@dimen/margin_vertical_post"
            android:layout_marginTop="@dimen/margin_vertical_post"
            app:cardCornerRadius="@dimen/radius_card_view_fragment_class"
            app:cardElevation="@dimen/elevation_card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_horizontal"
                    android:text="@string/image_class"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_image_class"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/layout_retry"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_retry"
                android:layout_width="@dimen/item_size"
                android:layout_height="@dimen/item_size"
                android:layout_centerInParent="true"
                android:padding="4dp"
                android:src="@drawable/btn_loading"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/progressbar_loading"
                android:layout_width="@dimen/item_size"
                android:layout_height="@dimen/item_size"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:layout_marginTop="@dimen/margin_vertical"/>

            <TextView
                android:id="@+id/textview_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_retry"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:text="@string/cant_connect"
                android:visibility="gone"/>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>