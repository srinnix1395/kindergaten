<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollview_detail_class"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_high">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_horizontal"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imageview_icon"
                        android:layout_width="@dimen/item_size"
                        android:layout_height="@dimen/item_size"/>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textview_class_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_icon_fragment_class"
                    android:layout_marginRight="@dimen/margin_icon_fragment_class"
                    android:layout_toRightOf="@id/cardview_icon"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="16sp"
                    tools:text="Lớp chồi 4"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/margin_vertical_post"
                android:layout_marginLeft="@dimen/margin_horizontal"
                android:layout_marginRight="@dimen/margin_horizontal"
                android:background="@color/colorDividerColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vertical_post"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="@dimen/padding_drawable_high"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_horizontal"
                    android:text="@string/teacher"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <include
                    android:id="@+id/rel_teacher_1"
                    layout="@layout/item_teacher"/>

                <include
                    android:id="@+id/rel_teacher_2"
                    layout="@layout/item_teacher"/>

                <include
                    android:id="@+id/rel_teacher_3"
                    layout="@layout/item_teacher"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/margin_vertical_post"
                android:layout_marginLeft="@dimen/margin_horizontal"
                android:layout_marginRight="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical_post"
                android:background="@color/colorDividerColor"/>

            <RelativeLayout
                android:id="@+id/layout_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vertical_post"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_children"
                    android:layout_width="@dimen/icon_medium_size"
                    android:layout_height="@dimen/item_size"
                    android:layout_marginLeft="@dimen/margin_horizontal"
                    android:layout_marginRight="@dimen/padding_drawable_high"
                    android:src="@drawable/image_children_crawl"/>

                <TextView
                    android:id="@+id/textview_member"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:layout_toRightOf="@+id/image_children"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:text="@string/class_member"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_member_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_member"/>

                <!--<TextView-->
                <!--android:id="@+id/textview_see_all"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/item_size"-->
                <!--android:layout_below="@+id/recyclerview_member_class"-->
                <!--android:background="?selectableItemBackground"-->
                <!--android:clickable="true"-->
                <!--android:drawableLeft="@drawable/ic_next"-->
                <!--android:drawablePadding="@dimen/padding_drawable_high"-->
                <!--android:fontFamily="sans-serif-light"-->
                <!--android:gravity="center_vertical"-->
                <!--android:paddingLeft="@dimen/margin_horizontal"-->
                <!--android:textAllCaps="true"-->
                <!--android:textStyle="bold"-->
                <!--tools:text="@string/see_all"/>-->
            </RelativeLayout>

            <View
                android:id="@+id/view_line_member"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/margin_vertical_post"
                android:layout_marginLeft="@dimen/margin_horizontal"
                android:layout_marginRight="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical_post"
                android:background="@color/colorDividerColor"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/image_children1"
                    android:layout_width="@dimen/icon_medium_size"
                    android:layout_height="@dimen/item_size"
                    android:layout_marginLeft="@dimen/margin_horizontal"
                    android:layout_marginRight="@dimen/padding_drawable_high"
                    android:src="@drawable/image_images"/>

                <TextView
                    android:id="@+id/textview_title3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:layout_toRightOf="@+id/image_children1"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:text="@string/image_class"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_image_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_title3"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/layout_retry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageview_retry"
            android:layout_width="@dimen/item_size"
            android:layout_height="@dimen/item_size"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:src="@drawable/btn_loading"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textview_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_retry"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="@string/cant_connect"
            android:visibility="visible"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbar_loading"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:layout_marginTop="@dimen/margin_vertical"/>

</RelativeLayout>