<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_item_loading">

    <ImageView
        android:id="@+id/imageview_start_loading"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_centerInParent="true"
        android:padding="4.5dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_plus"/>

    <ImageView
        android:id="@+id/imageview_retry"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:src="@drawable/btn_loading"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressbar_itemloading"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:layout_marginTop="@dimen/margin_vertical"
        android:padding="4.5dp"/>
</RelativeLayout>