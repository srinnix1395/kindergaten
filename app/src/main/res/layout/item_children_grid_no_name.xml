<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_item_children_grid"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="@dimen/margin_vertical_item_children"
    android:paddingTop="@dimen/margin_vertical_item_children">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_icon"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_vertical_item_children"
        android:layout_marginTop="@dimen/margin_vertical_item_children"/>
</RelativeLayout>