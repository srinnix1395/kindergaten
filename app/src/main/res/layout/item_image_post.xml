<?xml version="1.0" encoding="utf-8"?>
<com.srinnix.kindergarten.custom.SquareItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imageview_remove"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_horizontal_low"
        android:layout_marginTop="@dimen/margin_horizontal_low"
        android:paddingBottom="22dp"
        android:paddingStart="22dp"
        app:srcCompat="@drawable/image_close"/>

    <TextView
        android:id="@+id/textview_gif"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_gravity="center"
        android:background="@drawable/ic_gif_2"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="GIF"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

</com.srinnix.kindergarten.custom.SquareItemLayout>