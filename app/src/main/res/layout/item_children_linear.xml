<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_high"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="@dimen/padding_post"
    android:paddingLeft="@dimen/margin_horizontal"
    android:paddingRight="@dimen/margin_horizontal"
    android:paddingTop="@dimen/padding_post">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="@dimen/item_size"
            android:layout_height="@dimen/item_size"
            android:layout_centerVertical="true"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_icon_fragment_class"
        android:layout_toRightOf="@+id/cardview_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Phạm thanh thủy"/>

        <TextView
            android:id="@+id/textview_child_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            tools:text="3"/>
    </LinearLayout>
</RelativeLayout>