<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:clickable="true"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageview_height"
            android:layout_width="@dimen/icon_medium_size"
            android:layout_height="@dimen/item_size"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/padding_drawable_high"
            android:src="@drawable/image_height"/>

        <TextView
            android:id="@+id/textview_height"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_size"
            android:layout_toRightOf="@+id/imageview_height"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="@string/height"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageview_height"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:background="@color/colorDividerColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageview_weight"
            android:layout_width="@dimen/icon_medium_size"
            android:layout_height="@dimen/item_size"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/padding_drawable_high"
            android:src="@drawable/image_weight"/>

        <TextView
            android:id="@+id/textview_weight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_size"
            android:layout_toRightOf="@+id/imageview_weight"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="@string/weight"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageview_weight"/>
    </RelativeLayout>


</LinearLayout>