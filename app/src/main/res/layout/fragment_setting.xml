<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fafafa"
              android:clickable="true"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_noti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_high"
        android:paddingEnd="@dimen/margin_horizontal"
        android:paddingStart="@dimen/margin_horizontal"
        android:text="@string/receive_important_notification"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:background="@color/colorDividerColor"/>
</LinearLayout>