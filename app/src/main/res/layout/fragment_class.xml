<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_class"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_high"
            android:layout_marginBottom="@dimen/margin_vertical_post"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/radius_card_view_fragment_class"
            app:cardElevation="@dimen/elevation_card_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_post"
                android:paddingLeft="@dimen/margin_horizontal"
                android:paddingRight="@dimen/margin_horizontal"
                android:paddingTop="@dimen/padding_post">

                <ImageView
                    android:id="@+id/imageview_icon"
                    android:layout_width="@dimen/item_size"
                    android:layout_height="@dimen/item_size"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/textview_class_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_icon_fragment_class"
                    android:layout_toRightOf="@id/imageview_icon"
                    android:textSize="16sp"
                    tools:text="Lớp chồi 4"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical_post"
            android:layout_marginTop="@dimen/margin_vertical_post"
            app:cardCornerRadius="@dimen/radius_card_view_fragment_class"
            app:cardElevation="@dimen/elevation_card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_horizontal"
                    android:text="@string/teacher"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <include
                    android:id="@+id/rel_teacher_1"
                    layout="@layout/item_teacher"/>

                <include
                    android:id="@+id/rel_teacher_2"
                    layout="@layout/item_teacher"/>

                <include
                    android:id="@+id/rel_teacher_3"
                    layout="@layout/item_teacher"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_vertical_post"
            android:layout_marginTop="@dimen/margin_vertical_post"
            app:cardCornerRadius="@dimen/radius_card_view_fragment_class"
            app:cardElevation="@dimen/elevation_card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_horizontal"
                    android:text="@string/image_class"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_image_class"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>