<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackground">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="@dimen/item_size"
            android:layout_height="@dimen/item_size"
            android:scaleType="center"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_view_name"
        style="@style/StyleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toLeftOf="@+id/image_view_status"
        android:layout_toRightOf="@+id/cardview_icon"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="12sp"
        tools:text="Võ Thị Huệ"/>

    <ImageView
        android:id="@+id/image_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left_item"
        android:layout_marginRight="@dimen/margin_right_item"
        tools:src="@drawable/ic_state_online"/>

    <View
        android:id="@+id/view_divider_chatlist"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDividerColor"/>
</RelativeLayout>